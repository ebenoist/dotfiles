# Unix
alias ln='ln -v'
alias mkdir='mkdir -p'
#alias vi='vim'
#alias vim='nvim'
alias tar='gtar'
alias sed='gsed'
alias ls='ls -GF'

git-files() {
  git ls-tree --full-tree -r --name-only HEAD
}

re-ctags() {
  if [ -f .tags ] ; then
    rm .tags
  fi
  git-files | xargs ctags -a -f .tags -L
}

gif() {
 ffmpeg -i $1 -pix_fmt rgb24 -r 10 -f gif - | gifsicle --optimize=4 --delay=3 > $2
}
