[alias]
  co = checkout
  st = status
  ci = commit
  pu = pull --rebase
  ps = push
  br = branch
  l = log --graph --pretty=format:'%an: %s - %Cred%h%Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  slog = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
  slognc = log --pretty=format:'%h %ad %an%d %s' --date=short
	ctags = !~/.git_template/hooks/ctags
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = /Users/ebenoist/.gitignore
  editor = vim
  autocrlf = input
[apply]
  whitespace = nowarn
[web]
  browser = open
[merge]
	conflictstyle = diff3
[include]
  path = ~/.gituser
