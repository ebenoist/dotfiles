[alias]
  co = checkout
  st = status
  ci = commit
  pu = pull --rebase
  ps = push
  br = branch
  l = log --graph --pretty=format:'%an: %s - %Cred%h%Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  slog = log --pretty=format:'%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s' --date=short
  slognc = log --pretty=format:'%h %ad %an%d %s' --date=short
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  editor = nvim
  autocrlf = input
	excludesfile = /Users/erik/.gitignore
[apply]
  whitespace = nowarn
[web]
  browser = open
[merge]
	conflictstyle = diff3
[include]
  path = ~/.gituser
[url "git@github.com:"]
	insteadOf = https://github.com/
	insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[user]
	name = Erik Benoist
	email = ebenoist@gmail.com
[pull]
	ff = only
